{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "Nestjs Boilerplate",
  "author": "NestJS",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky",
    "prebuild": "rimraf dist && yarn db:generate",
    "build": "nest build",
    "bundle": "ncc build dist/main.js -m -o dist && mv dist/client/* dist && mv dist/index.js dist/main.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "deadcode": "ts-prune --project tsconfig.json --unusedInModule --skip *.json",
    "spell": "cspell lint --config cspell.json '{src,libs,test}/**/*.ts' --color --gitignore --no-must-find-files --no-summary --no-progress || true",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:repl": "nest start --entryFile repl",
    "start:prod": "node dist/src/main",
    "start:cli": "ts-node -r tsconfig-paths/register ./src/main.ts",
    "app:env": "npx ts-node scripts/generate-env.ts",
    "app:reset": "yarn app:reset:file && yarn app:reset:data",
    "app:reset:file": "rimraf logs/*/ public/uploads/*/ src/temporary/*",
    "app:reset:data": "yarn db:clear && yarn start:cli user:seed & yarn start:cli permission:seed && yarn start:cli role:seed && yarn start:cli tier:seed && yarn start:cli fact:seed",
    "permission:migrate": "yarn start:cli permission:seed",
    "role:migrate": "yarn start:cli role:migrate",
    "keys:generate": "npx ts-node scripts/generate-keys.ts",
    "admin:install": "yarn --cwd ./packages/nest-admin install",
    "admin:build": "yarn --cwd ./packages/nest-admin build && rm -rf public/admin && mv ./packages/nest-admin/dist public/admin",
    "schematics:install": "yarn --cwd ./packages/nest-schematics install",
    "schematics:build": "yarn --cwd ./packages/nest-schematics run build",
    "schematics:generate": "nest g -p modules -c ./packages/nest-schematics res",
    "db:format": "npx prisma format",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:clear": "npx prisma db push --force-reset",
    "db:reset": "npx prisma migrate reset --force",
    "db:migrate": "npx prisma migrate dev --create-only",
    "db:deploy": "npx prisma migrate deploy",
    "package:upgrade": "npx npm-check-updates -u",
    "package:check": "npx npm-check-updates -i",
    "lint": "eslint",
    "lint:staged": "lint-staged",
    "lint:fix": "eslint --fix",
    "test": "jest --config test/jest-e2e.json --passWithNoTests --forceExit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@casl/ability": "6.7.3",
    "@casl/prisma": "1.5.2",
    "@faker-js/faker": "9.9.0",
    "@nestjs/axios": "4.0.1",
    "@nestjs/cache-manager": "3.0.1",
    "@nestjs/common": "11.1.6",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.6",
    "@nestjs/event-emitter": "3.0.1",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/platform-socket.io": "11.1.6",
    "@nestjs/schedule": "6.0.0",
    "@nestjs/serve-static": "5.0.3",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/throttler": "6.4.0",
    "@nestjs/websockets": "11.1.6",
    "@prisma/client": "6.14.0",
    "@types/multer": "2.0.0",
    "archiver": "7.0.1",
    "axios": "1.11.0",
    "bcrypt": "6.0.0",
    "cache-manager": "7.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "compression": "1.8.1",
    "exceljs": "4.4.0",
    "ffmpeg-static": "5.2.0",
    "firebase-admin": "13.4.0",
    "fluent-ffmpeg": "2.1.3",
    "google-auth-library": "10.2.1",
    "hbs": "4.2.0",
    "heic-convert": "2.1.0",
    "helmet": "8.1.0",
    "image-size": "2.0.2",
    "jimp": "1.6.0",
    "luxon": "3.7.1",
    "multer": "2.0.2",
    "nest-commander": "3.19.0",
    "nestjs-i18n": "10.5.1",
    "nodemailer": "7.0.5",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pdfkit": "0.17.1",
    "pino": "9.9.0",
    "pino-http": "10.5.0",
    "prom-client": "^15.1.3",
    "randexp": "0.5.3",
    "range-parser": "1.2.1",
    "reflect-metadata": "0.2.2",
    "response-time": "2.3.4",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "socket.io": "4.8.1",
    "twilio": "5.8.0",
    "ua-parser-js": "2.0.4",
    "uuid": "11.1.0",
    "verify-apple-id-token": "3.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.7",
    "@nestjs/testing": "11.1.6",
    "@swc/core": "1.13.4",
    "@types/archiver": "6.0.3",
    "@types/bcrypt": "6.0.0",
    "@types/bytes": "3.1.5",
    "@types/compression": "1.8.1",
    "@types/concat-stream": "2.0.3",
    "@types/express": "5.0.3",
    "@types/fluent-ffmpeg": "2.1.27",
    "@types/heic-convert": "2.1.0",
    "@types/html-pdf": "3.0.3",
    "@types/jest": "30.0.0",
    "@types/luxon": "3.7.1",
    "@types/morgan": "1.9.10",
    "@types/node": "24.3.0",
    "@types/nodemailer": "7.0.1",
    "@types/passport-jwt": "4.0.1",
    "@types/pdfkit": "0.17.2",
    "@types/response-time": "2.3.9",
    "@types/supertest": "6.0.3",
    "@types/ua-parser-js": "0.7.39",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vercel/ncc": "0.38.3",
    "cspell": "9.2.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "jest": "30.0.5",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "prisma": "6.14.0",
    "source-map-support": "0.5.21",
    "stop-only": "3.4.3",
    "supertest": "7.1.4",
    "swc-loader": "0.2.6",
    "ts-jest": "29.4.1",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "ts-prune": "0.10.3",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write '{src,libs,test}/**/*.{ts,json,yml,yaml}'",
      "eslint",
      "stop-only --file",
      "git add ."
    ],
    "*.{json,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/../src/$1",
      "^lib/nest-core(|/.*)$": "<rootDir>/libs/nest-core/src/$1",
      "^lib/nest-auth(|/.*)$": "<rootDir>/libs/nest-auth/src/$1",
      "^lib/nest-file(|/.*)$": "<rootDir>/libs/nest-file/src/$1",
      "^lib/nest-logger(|/.*)$": "<rootDir>/libs/nest-logger/src/$1",
      "^lib/nest-notifier(|/.*)$": "<rootDir>/libs/nest-notifier/src/$1",
      "^lib/nest-message(|/.*)$": "<rootDir>/libs/nest-message/src/$1",
      "^lib/nest-prisma(|/.*)$": "<rootDir>/libs/nest-prisma/src/$1",
      "^lib/nest-web(|/.*)$": "<rootDir>/libs/nest-web/src/$1"
    }
  }
}
